{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noEmit": false,
    "lib": ["ESNext"],
    "module": "es2022",
    "target": "es2020",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "myjestlib": ["myjestlib/src/index.ts"],
      "myvitelib": ["myvitelib/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "dist", "config"],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
